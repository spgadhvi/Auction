<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js" integrity="sha256-P93G0oq6PBPWTP1IR8Mz/0jHHUpaWL0aBJTKauisG7Q=" crossorigin="anonymous"></script>    <!--magfinic-popup.min.js v1.1.0-->









<!--funneback autocompletion init -->
<script>
    $(document).ready( function() {
        // Auto-completion setup - header search box.
        $("#search-box").fbcompletion({
            'enabled': 'enabled',
            'standardCompletionEnabled': true,
            'collection' : 'dfsift-meta',
            'program': 'https://nswdfsi-search.squiz.cloud/s/suggest.json',
            'format': 'extended',
            'alpha': '.5',
            'show': '10',
            'sort': '0',
            'length': '3',
            'delay': '0',
            'profile': '_default_preview',
            'query': 'collection=dfsift-meta&amp;query=&amp;profile=_default_preview',
            //Search based completion
            'searchBasedCompletionEnabled': false,
            'searchBasedCompletionProgram': 'https://nswdfsi-search.squiz.cloud/s/search.json'
        });

        var mainSearchBoxJQ = $("#main-search-box");
        var topSearchBoxJQ = $("#search-box");

        // add a href link to each keywords in auto-completion list
        var ulAutocompleteJQ = $(".ui-autocomplete");
        if (ulAutocompleteJQ.length > 0) {
            ulAutocompleteJQ.each(function() {
                new MutationObserver(
                    function(mutationRecords) {
                        var keywordLinkItemListJQ = $(".ui-menu-item");
                        if (keywordLinkItemListJQ.length > 0) {
                            keywordLinkItemListJQ.each(function(index) {
                                var kwAlinkJQ = $(this).find("a");
                                if (367038 === 343710 || 367038 === 342788) {
                                    if ($(this).parent().is("#ui-id-1")) {
                                        kwAlinkJQ.attr("href", "?query=" + kwAlinkJQ.text());
                                    } else {
                                        kwAlinkJQ.attr("href", "https://www.fairtrading.nsw.gov.au/search?query=" + kwAlinkJQ.text());
                                    }
                                } else if (367038 === 343681) {
                                    kwAlinkJQ.attr("href", "?query=" + kwAlinkJQ.text());
                                } else {
                                    kwAlinkJQ.attr("href", "https://www.fairtrading.nsw.gov.au/search?query=" + kwAlinkJQ.text());
                                }
                                kwAlinkJQ.attr("tabindex", index + 1)
                            });
                        }
                    }
                ).observe(
                    this,
                    {
                        childList: true,
                        attributes: true,
                        characterData: true
                    }
                );
            });
        }

        // add keyboard control for autocompletion box for global search
        if (topSearchBoxJQ.length > 0) {
            if (mainSearchBoxJQ.length > 0) {
                var topSearchAutocompleteUlJQ = $("#ui-id-2");
            } else {
                var topSearchAutocompleteUlJQ = $("#ui-id-1");
            }
            topSearchBoxJQ.unbind("keydown").keydown(function(e) {
                var currentSelectedJQ = $(".autocomplete-keyword-selected");
                if (currentSelectedJQ.length === 0) {
                    if (e.which === 40) {
                        var firstLiJQ = topSearchAutocompleteUlJQ.children("li").first();
                        firstLiJQ.addClass("autocomplete-keyword-selected");
                        topSearchBoxJQ.val(firstLiJQ.text());
                    }
                    return;
                }
                if (e.which === 40) {
                    var nextSelectedJQ = currentSelectedJQ.next("li");
                    if (nextSelectedJQ.length === 0) {
                        nextSelectedJQ = topSearchAutocompleteUlJQ.children("li").first();
                    }
                    currentSelectedJQ.removeClass("autocomplete-keyword-selected");
                    nextSelectedJQ.addClass("autocomplete-keyword-selected");
                    topSearchBoxJQ.val(nextSelectedJQ.text());
                } else if (e.which === 38) {
                    e.preventDefault();
                    var previousSelectedJQ = currentSelectedJQ.prev("li");
                    if (previousSelectedJQ.length === 0) {
                        previousSelectedJQ = topSearchAutocompleteUlJQ.children("li").last();
                    }
                    currentSelectedJQ.removeClass("autocomplete-keyword-selected");
                    previousSelectedJQ.addClass("autocomplete-keyword-selected");
                    topSearchBoxJQ.val(previousSelectedJQ.text());
                }
            });
        }

        // add keyboard control for autocompletion box for main search (if exist)
        if (mainSearchBoxJQ.length > 0) {
            var mainSearchAutocompleteUlJQ = $("#ui-id-1");
            mainSearchBoxJQ.unbind("keydown").keydown(function(e) {
                var currentSelectedJQ = $(".autocomplete-keyword-selected");
                if (currentSelectedJQ.length === 0) {
                    if (e.which === 40) {
                        var firstLiJQ = mainSearchAutocompleteUlJQ.children("li").first();
                        firstLiJQ.addClass("autocomplete-keyword-selected");
                        mainSearchBoxJQ.val(firstLiJQ.text());
                    }
                    return;
                }
                if (e.which === 40) {
                    var nextSelectedJQ = currentSelectedJQ.next("li");
                    if (nextSelectedJQ.length === 0) {
                        nextSelectedJQ = mainSearchAutocompleteUlJQ.children("li").first();
                    }
                    currentSelectedJQ.removeClass("autocomplete-keyword-selected");
                    nextSelectedJQ.addClass("autocomplete-keyword-selected");
                    mainSearchBoxJQ.val(nextSelectedJQ.text());
                } else if (e.which === 38) {
                    e.preventDefault();
                    var previousSelectedJQ = currentSelectedJQ.prev("li");
                    if (previousSelectedJQ.length === 0) {
                        previousSelectedJQ = mainSearchAutocompleteUlJQ.children("li").last();
                    }
                    currentSelectedJQ.removeClass("autocomplete-keyword-selected");
                    previousSelectedJQ.addClass("autocomplete-keyword-selected");
                    mainSearchBoxJQ.val(previousSelectedJQ.text());
                }
            });
        }
    });
</script>

